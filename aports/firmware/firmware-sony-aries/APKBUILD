pkgname=firmware-sony-aries
pkgver=1
pkgrel=0
pkgdesc="Firmware files for Xperia Z3 Compact"
url="https://github.com/TheMuppets/proprietary_vendor_sony"
arch="noarch"
license="proprietary"
depends="firmware-aosp-broadcom-wlan"
options="!strip !check !archcheck"

# Source
_files="venus.b00 venus.b01 venus.b02 venus.b03 venus.b04 venus.mbn venus.mdt"
_commit="77e54317f50cccb3e1d69422dad5e3da3c7ee238"
_url="https://github.com/TheMuppets/proprietary_vendor_sony/raw/$_commit/shinano-common/proprietary/etc/firmware"
source=""

for _i in $_files; do
	source="$source $pkgname-$_commit-$_i::$_url/$_i"
done

package() {
	cd "$srcdir"

	# /lib/firmware/postmarketos
	for _i in $_files; do
		install -D -m644 "$pkgname-$_commit-$_i" \
			"$pkgdir/lib/firmware/postmarketos/$_i"
	done
}

